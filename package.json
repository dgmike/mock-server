{
  "name": "@staticdeploy/mock-server",
  "version": "1.4.0",
  "description": "Easy to use, no frills mock server",
  "main": "src/index.js",
  "bin": {
    "mock-server": "src/bin/index.js"
  },
  "scripts": {
    "dev:gitbook": "gitbook install && gitbook serve",
    "test": "env NODE_PATH=src mocha --recursive test",
    "coverage": "env NODE_ENV=test nyc --reporter=text --reporter=lcov npm run test",
    "publish-coverage": "codecov",
    "precommit": "yarn lint",
    "prettier": "prettier '@(app|test)/**/*.js'",
    "prettify": "yarn prettier --write",
    "lint:prettier": "yarn prettier --list-different",
    "lint:eslint": "eslint app test",
    "lint": "yarn lint:prettier && yarn lint:eslint"
  },
  "keywords": [
    "mock",
    "server",
    "api"
  ],
  "files": [
    "src",
    "docs"
  ],
  "author": "Paolo Scanferla <paolo.scanferla@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/staticdeploy/mock-server.git"
  },
  "bugs": {
    "url": "https://github.com/staticdeploy/mock-server/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.1",
    "chalk": "^2.1.0",
    "connect-slow": "^0.4.0",
    "cors": "^2.8.4",
    "decache": "^4.1.0",
    "express": "^4.15.4",
    "fancy-log": "^1.3.0",
    "fs-readdir-recursive": "^1.0.0",
    "lodash.debounce": "^4.0.8",
    "lodash.includes": "^4.3.0",
    "methods": "^1.1.2",
    "node-watch": "^0.5.5",
    "watch": "^1.0.2",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "codecov": "^2.3.0",
    "create-fs-tree": "^1.0.0",
    "eslint": "^4.7.0",
    "eslint-config-prettier": "^2.5.0",
    "gitbook-cli": "^2.3.2",
    "husky": "^0.14.3",
    "lodash.sortby": "^4.7.0",
    "mocha": "^3.5.3",
    "nyc": "^11.2.1",
    "prettier": "^1.7.0",
    "strip-indent": "^2.0.0",
    "supertest": "^3.0.0"
  },
  "peerDependencies": {
    "@staticdeploy/app-server": "^1.0.2"
  }
}
